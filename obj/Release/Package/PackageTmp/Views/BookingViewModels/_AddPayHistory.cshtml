@model AlfaAccounting.Models.PaymentHistory

@*@{
        ViewBag.Title = "Add Payment History";
        Layout = "~/Views/Shared/_LayoutLoggedIn.cshtml";
    }*@

@*<h2>Add pay history</h2>*@

@using (Ajax.BeginForm("AddPayHistory","BookingViewModels", new AjaxOptions { UpdateTargetId = "add-pay-history" }))
{
    @Html.AntiForgeryToken()
    <div class="modal fade" id="editModal">
        <div id="dialog-modal" class="container" style="width:100%">
            <div class="modal-content">
                @*<div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                    <h4 class="modal-title"></h4>
                </div>*@
                <div class="modal-body">

                    <table id="Add_PayHistory" class="table table-hover table-striped">
                        <thead>

                            <tr>
                                <th style="width:20%">@Html.DisplayNameFor(model => model.PaymentDateTime)</th>
                                <th style="width:20%">@Html.DisplayNameFor(model => model.PaymentType)</th>
                                <th style="width:10%">@Html.DisplayNameFor(model => model.CreditAmount)</th>
                                <th style="width:10%">@Html.DisplayNameFor(model => model.DebitAmount)</th>
                                <th style="width:10%"></th>
                                @*<th style="width:10%">@Html.DisplayNameFor(model => model.InvoiceId)</th>*@
                                @*<th style="width:10%">@Html.DisplayNameFor(model => model.Id)</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    @Html.EditorFor(model => model.PaymentDateTime, new { htmlAttributes = new { @class = "form-control" , @id="payDate"} })
                                    @Html.ValidationMessageFor(model => model.PaymentDateTime, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.EnumDropDownListFor(model => model.PaymentType, "", htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.PaymentType, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.CreditAmount, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.CreditAmount, "", new { @class = "text-danger" })
                                </td>
                                <td>
                                    @Html.EditorFor(model => model.DebitAmount, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DebitAmount, "", new { @class = "text-danger" })
                                </td>
                                @*<td>
                                        @Html.DropDownList("InvoiceId", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.InvoiceId, "", new { @class = "text-danger" })
                                    </td>
                                    <td>
                                        @Html.DropDownList("Id", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                                    </td>*@
                                <td>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="AddPaymentHistory" class="btn btn-default" />
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                @*<div class="modal-footer">
                    <button type="button" class="btn-primary" data-dismiss="modal">Close</button>
                </div>*@
                </div><!--modal-body end-->
            </div><!--modal-content end-->
        </div><!--modal-dialog end-->
    </div><!--modal fade class end-->
    <P>
        @if (ViewBag.IsUpdate == true)
        {
            <input type="submit" value="Update" id="btnUpdate" name="cmd" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />
        }
        else
        {
            <input type="submit" value="Save" id="btnSave" name="cmd" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />
        }
        <input type="button" value="Cancel" id="btncancel" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only" />
    </P>
}
@section scripts{
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
        $('#payDate').datepicker({
            dateFormat: "dd/mm/yy",
            showStatus: true,
            showWeeks: true,
            currentText: 'Now',
            autoSize: true,
            gotoCurrent: true,
            showAnim: 'blind',
            highlightWeek: true
        });
    });
    </script>

}

